public class key_manager1 implements InterworkingService{

	@Override
	public ResponsePrimitive doExecute(RequestPrimitive request) {
		ResponsePrimitive response = new ResponsePrimitive(request);
		response.setResponseStatusCode(ResponseStatusCode.OK);
		
		String res = request.getContent().toString();
		System.out.println("IPE Received:" + res);
		if(res == "Change Key") {
			System.out.println("Creating new key to IPE...");
			FUNC.createContentInstances(Constants.IPE_NAME,4);
		}
//		try {
